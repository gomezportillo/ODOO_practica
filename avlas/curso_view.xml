<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <record id="view_curso_tree" model="ir.ui.view">
      <field name="name">res.curso.tree</field>
      <field name="model">res.curso</field>
      <field name="arch" type="xml">
        <tree string="Ediciones">
          <field name="nombre"/>
          <field name="precio"/>
          <field name="ediciones"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="view_curso_form">
      <field name="name">res.curso.form</field>
      <field name="model">res.curso</field>
      <field name="arch" type="xml">
        <form string="Cursos">
          <div>
            <label for="nombre" string="Nombre del Curso: "/>
            <field name="nombre"/>
          </div>
          <div>
            <label for="precio" string="Precio: "/>
            <field name="precio"/>
          </div>
          <div>
            <label for="ediciones" string="NÂº Ediciones"/>
            <field name="ediciones"/>
          </div>
        </form>
      </field>
    </record>

    <record model="ir.actions.act_window" id="action_curso">
      <field name="name">Cursos</field>
      <field name="res_model">res.curso</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Cursos" id="menu_curso" parent="base.menu_product" action="action_curso"/>

  </data>
</openerp>
